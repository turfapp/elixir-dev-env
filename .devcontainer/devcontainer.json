{
  "name": "DevContainer for Elixir",
  "remoteUser": "vscode",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "jakebecker.elixir-ls",
        "pantajoe.vscode-elixir-credo"
      ],
      "settings": {
        "files.exclude": {
          "**/*.olean": true,
          "**/.DS_Store": true,
          "**/.git": true,
          "**/.hg": true,
          "**/.svn": true,
          "**/CVS": true
        },
        "elixirLS.dialyzerWarnOpts": [
          "no_return",
          "no_unused",
          "no_unknown",
          "no_improper_lists",
          "no_fun_app",
          "no_match",
          "no_opaque",
          "no_fail_call",
          "no_contracts",
          "no_behaviours",
          "no_undefined_callbacks",
          "unmatched_returns",
          "error_handling",
          "no_missing_calls",
          "specdiffs",
          "overspecs",
          "underspecs",
          "no_underspecs",
          "extra_return",
          "no_extra_return",
          "missing_return",
          "no_missing_return",
          "unknown",
          "overlapping_contract"
        ]
      }
    }
  }
}